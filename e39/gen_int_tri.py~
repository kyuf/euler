#function that returns number of right integer triangles with given perimeter
def triangles(p):
    count = 0
    tri_list = []
    #maximum a value is p // 3 - 1
    #minimum a is 2
    for a in range(2, p // 3):
        #b must be integer so use //
        b = p * (p - 2 * a) // (2 * (p - a))
        c = p - a - b
        if a ** 2 + b ** 2 == c ** 2:
            count += 1
            tri_list.append([a, b, c])
    if tri_list:
        print(tri_list)
    return count
